<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:background="@color/white">
    <TextView android:id="@+id/changecleaner_week"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:singleLine="true"
    	android:textSize="20dp"
    />
    <Spinner android:id="@+id/changecleaner_newweekselector"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/changecleaner_week"
    />
    <Button android:id="@+id/changecleaner_savebtn"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@id/changecleaner_newweekselector"
    	android:padding="10dp"
    	android:text="@string/savebtn"
    	android:textColor="@color/white"
    	android:background="@drawable/custombtn"
    	/>

</RelativeLayout>
